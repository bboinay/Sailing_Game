package main;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Point;
import java.awt.Rectangle;
import java.awt.geom.Point2D;
import java.awt.image.BufferedImage;

public class Player extends GameObject{

	private KeyInput kInput;
	private Game game;
	
	public double priority = 200;
	
	public Player(Point3D origin, Game game) {
		super(origin);
		setId(ID.Player);
		
		width = 64;
		height = 32;
		
		turningBrakeFactor = .99;
		
		this.game = game;
		kInput = game.getKeyInput();
	}
	
	public void render(Graphics g) {
		Graphics2D g2d = (Graphics2D)g;
		
		g2d.rotate(directionInRadians, getCenterX(), getCenterY());
		g.setColor(Color.black);
		g.fillRect((int)getX(), (int)getY(), (int)getWidth(), (int)getHeight());
		g2d.rotate(-directionInRadians, getCenterX(), getCenterY());
	}
	
	public void tick() {
		updateVelocityWithClampedAcceleration();
		updatePositionWithClampedVelocity();
		
		keyInputCheck();
		turn();
		
		printMovementVectors();
	}
	
	public void keyInputCheck() {
		if(kInput.keyA)
			radialAcceleration = -.000001;
		else if(kInput.keyD)
			radialAcceleration = .000001;
		else if(kInput.keyW) {
			incrementAccelerationAtAngle(directionInRadians);
		} else {
			radialAcceleration = 0;
			radialVelocity *= .999;
			velocity.multiplyAllComponentsBy(.99);
			acceleration.multiplyAllComponentsBy(.9);
		}
	}
}
