package main;
import java.awt.image.BufferedImage;
import java.io.IOException;

public class MapHandler {
	 
	private String baseMapPath = "/map_base.png";
	private String topMapPath = "/map_top.png";
	
	private String demoBaseMapPath = "/demo_map_base.png";
	private String demoTopMapPath = "/demo_map_top.png";
	
	private BufferedImage baseMap;
	private BufferedImage topMap;
	
	private boolean demo = false;
	
	public MapHandler() {
		
	}
	
	public void retrieveRegularMap() {
		BufferedImageLoader loader = new BufferedImageLoader();
		try {
			baseMap = loader.loadImage(baseMapPath);
			topMap = loader.loadImage(topMapPath);
			
		} catch(IOException e) {
			e.printStackTrace();
		}
	}
	
	public void retrieveDemoMap() {
		BufferedImageLoader loader = new BufferedImageLoader();
		try {
			baseMap = loader.loadImage(demoBaseMapPath);
			topMap = loader.loadImage(demoTopMapPath);
			
		} catch(IOException e) {
			e.printStackTrace();
		}
	}
	
	public BufferedImage getBaseMap() {
		return baseMap;
	}
	
	public BufferedImage getTopMap() {
		return topMap;
	}
}
